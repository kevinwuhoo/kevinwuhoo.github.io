<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

<% pages = sitemap.resources.find_all{|p| p.source_file.match(/\.html/) } %>
<% pages.each do |p| %>
  <% next if p.destination_path.include?('blog') || p.destination_path.include?('404') %>
  <url>
    <loc><%= "http://kevinformatics.com/#{p.destination_path.gsub('index.html','')}".chomp('/') %></loc>
    <priority>0.7</priority>
  </url>
<% end %>
</urlset>

